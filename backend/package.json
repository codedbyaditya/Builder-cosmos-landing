    "@types/cookie-parser": "^1.4.6",
    "@types/validator": "^13.11.7",
    "@types/uuid": "^9.0.7",
    "@types/node": "^20.9.0",
    "@types/jest": "^29.5.8",
    "@types/supertest": "^2.0.16",
