# Server Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/bindisa-agritech
MONGODB_TEST_URI=mongodb://localhost:27017/bindisa-agritech-test

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-token-secret-here
JWT_REFRESH_EXPIRES_IN=30d

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=600
OPENAI_TEMPERATURE=0.7

# Client Configuration
CLIENT_URL=http://localhost:3000

# Email Configuration (NodeMailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@bindisa-agritech.com

# Cloudinary Configuration (for file uploads)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CHAT_RATE_LIMIT_MAX=20

# Security
BCRYPT_SALT_ROUNDS=12
COOKIE_SECRET=your-cookie-secret-here

# External APIs
WEATHER_API_KEY=your-weather-api-key
SOIL_API_KEY=your-soil-data-api-key

# SMS Configuration (optional)
SMS_API_KEY=your-sms-api-key
SMS_SENDER_ID=BINDISA

# Push Notifications (optional)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY=your-firebase-private-key
FIREBASE_CLIENT_EMAIL=your-firebase-client-email

# Analytics
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/

# Cache Configuration (Redis - optional)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# File Upload Limits
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# API Versioning
API_VERSION=v1

# Development/Testing
ENABLE_LOGGING=true
ENABLE_CORS=true
ENABLE_HELMET=true

# Production specific
SESSION_SECRET=your-session-secret-here
TRUST_PROXY=false

# Admin Configuration
ADMIN_EMAIL=admin@bindisa-agritech.com
ADMIN_PASSWORD=your-admin-password

# Backup Configuration
BACKUP_INTERVAL=24h
BACKUP_RETENTION_DAYS=30
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_BUCKET_NAME=bindisa-backups
